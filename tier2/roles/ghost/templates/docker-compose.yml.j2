version: '3'
services:

  ghost:
    image: ghost:latest
    restart: always
    environment:
      url: https://stainsbury.com
    volumes:
      - /home/samrap/ghost_content:/var/lib/ghost/content

  nginx:
    build:
      context: ./nginx
      dockerfile: Dockerfile
    restart: always
    depends_on:
      - ghost
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - /etc/letsencrypt/:/etc/letsencrypt/
      - /usr/share/nginx/html:/usr/share/nginx/html
